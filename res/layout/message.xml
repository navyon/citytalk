<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="@android:color/white">



            />
    <EditText
            android:layout_width="345dp"
            android:layout_height="258dp"
            android:text="Voer hier direct jouw bericht in."
            android:id="@+id/txtView_msg" android:layout_gravity="center_horizontal|top" android:background="#010101"
            android:textColor="#f5f5f5" android:textStyle="bold" android:singleLine="false" android:maxLines="4"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
        android:selectAllOnFocus="true"
            android:layout_row="1" android:layout_column="0"
            android:lineSpacingExtra="-4dp"
        android:clickable="true"
        android:textSize="50dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/space2"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:text="Maximaal 4 regels. De tekst zal er precies zo uit komen te zien op het Beeld van Den Haag!"
            android:id="@+id/textView" android:layout_row="2" android:layout_column="0"
        android:textIsSelectable="true"
        style="@style/simpleText_new"
        android:layout_below="@+id/txtView_msg"
        android:layout_toRightOf="@+id/space"
        android:layout_alignRight="@+id/txtView_msg"
        android:layout_alignEnd="@+id/txtView_msg" /> "
        android:focusableInTouchMode="false" />
    <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Bekijk je preview!"
            android:id="@+id/btnpreview" android:layout_row="4" android:layout_column="0"
        style="@style/BvDH_button"
        android:layout_gravity="bottom"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Space
            android:layout_width="20px"
            android:layout_height="80px"
            android:id="@+id/space" android:layout_row="3" android:layout_column="0"/>


</RelativeLayout>