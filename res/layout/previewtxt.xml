<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"><![CDATA[



            />
    ]]>
    <Space
            android:layout_width="20px"
            android:layout_height="40px"
            android:id="@+id/space" android:layout_row="3" android:layout_column="0"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Stuur Het op"
            android:id="@+id/btnSubmitmsgtxt" android:layout_row="4" android:layout_column="0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/imageViewPreview" android:layout_row="0" android:layout_column="0"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Wijzig tekst"
            android:id="@+id/btnchangePreviewText" android:layout_row="1" android:layout_column="0" android:clickable="true"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Wijzig foto"
            android:id="@+id/btnChangePreviewPhoto" android:layout_row="2" android:layout_column="0"/>


