<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:columnCount="2"
    android:rowCount="6"

        >

    <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/space" android:layout_row="4" android:layout_column="0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/imageViewPreview" android:layout_row="0" android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
            android:layout_width="161dp"
            android:layout_height="80dp"
            android:text="Wijzig foto"
            android:id="@+id/btnChangePreviewPhoto" android:layout_row="3" android:layout_column="0"
        style="@style/BvDH_button"
        android:drawableTop="@drawable/camera_icon"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:textSize="18dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/BvDH_green"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/btnchangePreviewText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/btnchangePreviewText"
        android:layout_toLeftOf="@+id/space" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:text="Wijzig tekst"
            android:id="@+id/btnchangePreviewText" android:layout_row="2" android:layout_column="2" android:clickable="true"
        style="@style/BvDH_button"
        android:drawableTop="@drawable/text_icon"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/BvDH_Rood"
        android:textColor="@android:color/white"
        android:layout_above="@+id/btnSubmitmsgtxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/space"
        android:textSize="18dp" />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Stuur Het op"
            android:id="@+id/btnSubmitmsgtxt" android:layout_row="5" android:layout_column="0"

        style="@style/BvDH_button"
        android:background="@color/BvDH_paars"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />


</RelativeLayout>