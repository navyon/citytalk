<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#010101"

    android:orientation="vertical">

    <TextView
        android:layout_width="345dp"
        android:layout_height="258dp"
        android:id="@+id/imageViewPreview"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:background="#010101"
        android:textColor="#f5f5f5" android:textStyle="bold" android:singleLine="false" android:maxLines="4"
        android:lineSpacingExtra="-4dp"
        android:clickable="true"
        android:textSize="50dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wijzig foto"
                android:id="@+id/btnChangePreviewPhoto"
            style="@style/BvDH_button"
            android:drawableTop="@drawable/camera_icon"
            android:textSize="18dp"
            android:background="@color/BvDH_green"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            android:clickable="true"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingTop="40dp" />

        <Button
            style="@style/BvDH_button"
            android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wijzig tekst"
                android:id="@+id/btnchangePreviewText"
            android:clickable="true"
            android:drawableTop="@drawable/text_icon"
            android:background="@color/BvDH_Rood"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingTop="40dp" />

    </LinearLayout>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Ik ben tevreden!"
            android:id="@+id/btnSubmitmsgtxt"

        style="@style/BvDH_button"
        android:background="@color/BvDH_paars"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:gravity="center" />


</LinearLayout>