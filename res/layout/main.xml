<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:text="Beeld van Den Haag"
            android:id="@+id/textView2"
            android:background="#342a3c"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:autoText="false"
            android:singleLine="false"
            android:layout_gravity="right"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="10dp"
            android:textSize="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/textView"
            android:background="#342a3c"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:autoText="false"
            android:singleLine="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="10dp"
            android:textSize="20dp"
            android:text="Welkom bij Beeld van Den Haag! Hier kunt u uw bericht naar het grote scherm op de Haagse Toren sturen. Upload een mooie foto, of stuur enkel een bericht in!"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />


        <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text="Tekst"
                android:id="@+id/btn_Skip" android:textSize="30dp"
                android:textColor="@android:color/white"
            android:background="#342a3c"
            android:layout_gravity="bottom|right"
            android:layout_below="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="20dp" />

        <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text="Foto"
                android:id="@+id/btn_crop" android:textSize="30dp"
                android:textColor="@android:color/white"
            android:background="#342a3c"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="20dp" />

    </RelativeLayout>

</LinearLayout>

