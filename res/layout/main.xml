<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:text="Beeld van Den Haag"
            android:id="@+id/textView2"
            android:background="#342a3c"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:autoText="false"
            android:singleLine="false"
            android:lineSpacingMultiplier="0.8"
            android:layout_gravity="right"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="20dp"
            android:textSize="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_height="180dp"
            android:id="@+id/textView"
            android:text="Welkom bij Beeld van Den Haag! Hier kunt u uw bericht naar het grote scherm op de Haagse Toren sturen. Upload een mooie foto, of stuur enkel een bericht in!"
            style="@style/simpleText"
            android:textColor="@color/BvDH_paars"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="normal" android:layout_width="wrap_content"/>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:text="Alleen tekst"
                android:id="@+id/btn_Skip" android:textSize="18dp"
                android:textColor="@android:color/white"
            android:background="@color/BvDH_Rood"
            android:drawableTop="@drawable/text_icon"
            android:layout_gravity="bottom|right"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/btn_crop"
            android:layout_toRightOf="@+id/space"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_crop" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:id="@+id/btn_crop"
            android:drawableTop="@drawable/camera_icon"
            android:text="Foto en tekst"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:layout_toLeftOf="@+id/space"
            style="@style/BvDH_button"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@color/BvDH_green" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/space"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

