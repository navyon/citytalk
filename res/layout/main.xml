<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bvdh_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp" />

    <TextView
        android:id="@+id/textView"
            android:text="Wat wilt u plaatsen op de haagse toren?"
            style="@style/textCapsCentre"
        android:layout_above="@+id/btn_Skip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/btn_crop"
        android:drawableTop="@drawable/camera_icon"
        android:text="Foto en tekst"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:layout_toLeftOf="@id/space"
        style="@style/BvDH_button"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/BvDH_green" />

    <Button
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:text="Alleen tekst"
                android:id="@+id/btn_Skip" android:textSize="18dp"
                android:textColor="@android:color/white"
            android:background="@color/BvDH_Rood"
            android:drawableTop="@drawable/text_icon"
            android:layout_gravity="bottom|right"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@id/btn_crop"
            android:layout_toRightOf="@id/space"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_crop"
            style="@style/BvDH_button" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/space"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

