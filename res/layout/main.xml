<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/imageView"
        android:src="@drawable/bvdh_logo"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView"
        android:text="Wat wilt u plaatsen op de haagse toren?"
        style="@style/textCapsCentre"
        android:layout_marginBottom="18dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center_horizontal|bottom" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:weightSum="1"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/btn_crop"
            android:drawableTop="@drawable/camera_icon"
            android:text="Foto en tekst"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            style="@style/BvDH_button"
            android:textSize="18dp"
            android:layout_alignParentStart="true"
            android:background="@color/BvDH_green"
            android:layout_gravity="center_horizontal|bottom|left"
            android:layout_weight="0.50" />

        <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Alleen tekst"
                    android:id="@+id/btn_Skip" android:textSize="18dp"
                    android:textColor="@android:color/white"
                android:background="@color/BvDH_Rood"
                android:drawableTop="@drawable/text_icon"
            android:gravity="center_horizontal|bottom"
                android:paddingTop="40dp"
                android:paddingBottom="20dp"
                android:layout_alignParentEnd="true"
                style="@style/BvDH_button"
            android:layout_weight="0.50"
            android:layout_gravity="bottom|right" />
    </LinearLayout>


</LinearLayout>

