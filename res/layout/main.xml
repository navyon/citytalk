<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:text="Beeld van Den Haag"
            android:id="@+id/textView2"
            android:background="#342a3c"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:autoText="false"
            android:singleLine="false"
            android:lineSpacingExtra="-20dp"
            android:layout_gravity="right"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="20dp"
            android:textSize="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/textView"
            android:background="@android:color/white"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="#342a3c"
            android:textStyle="bold"
            android:autoText="false"
            android:singleLine="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="10dp"
            android:textSize="20dp"
            android:text="Welkom bij Beeld van Den Haag! Hier kunt u uw bericht naar het grote scherm op de Haagse Toren sturen. Upload een mooie foto, of stuur enkel een bericht in!"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />


        <Button
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:text="Tekst"
                android:id="@+id/btn_Skip" android:textSize="30dp"
                android:textColor="@android:color/white"
            android:background="#342a3c"
            android:drawableTop="@drawable/text_icon"
            android:layout_gravity="bottom|right"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/btn_crop"
            android:layout_toRightOf="@+id/space"
            android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:id="@+id/btn_crop" android:textSize="30dp"
                android:textColor="@android:color/white"
            android:background="#342a3c"
            android:drawableTop="@drawable/camera_icon"
            android:text="Foto"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:layout_below="@+id/textView"
            android:layout_toLeftOf="@+id/space"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/space"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>

