<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:background="@drawable/background"
                android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/background_test"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/bvdh_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ConfirmCheckbox"
        android:background="@color/green_trans"
            android:id="@+id/checkBox"
            android:textColor="@android:color/white"
            android:button="@drawable/btn_check_holo_dark"
            android:textSize="12sp"
            android:checked="false"
            android:fontFamily="sans-serif"
            android:paddingLeft="5dp"
            android:radius="5dp"
            android:gravity="center"
        android:layout_marginTop="50dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/editText_email"
        android:layout_centerHorizontal="true" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_email"
            android:hint="@string/ConfirmEmailHint"
            android:fontFamily="sans-serif-light"
            android:selectAllOnFocus="true"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:minWidth="300dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:padding="10dp" />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="@string/ConfirmBtn"
            android:id="@+id/btnfinalsubmit"
            style="@style/BvDH_button"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


</RelativeLayout>