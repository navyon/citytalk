<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bvdh_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Vul hier uw e-mailadres in"
        android:fontFamily="sans-serif-light"
        android:selectAllOnFocus="true"
        android:textSize="18sp" />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hierbij verklaar ik dat ik alle rechten  heb voor mijn beeld"
            android:id="@+id/checkBox"
            android:textColor="@android:color/white"
        android:button="@drawable/btn_check_holo_dark"
        android:textSize="12sp"
        android:gravity="center_vertical|left"
        android:checked="false"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="5dp"
        android:layout_below="@+id/editText"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:text="Plaats uw inzending"
            android:id="@+id/btnpreview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/BvDH_button"
        android:gravity="center" />


</RelativeLayout>