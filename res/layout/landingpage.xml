<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:columnCount="6"
    android:rowCount="6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bvdh_logo"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2" />


    <TextView
        style="@style/textCapsCentre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="bedankt voor uw inzending!"
        android:id="@+id/thanks"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_row="1"
        android:layout_column="1" />


    <TextView
        style="@style/textCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zodra je bericht is goedgekeurd verschijnt het op de Haagse Toren"
        android:id="@+id/textView4"
        android:layout_below="@+id/thanks"
        android:layout_marginTop="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="3" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/like"
        style="@style/textCentre"
        android:background="#0069b4"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Like ons op Facebook!"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_row="2"
        android:layout_column="1" />

</GridLayout>