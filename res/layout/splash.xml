<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_light"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/bvdh_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp" />


    <TextView
        style="@style/textCapsCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welkom bij beeld van den haag"
        android:id="@+id/welkom_text"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <TextView
        style="@style/textCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hier kunt u uw bericht naar het grote scherm op de Haagse Toren sturen. Upload een mooie foto, of stuur enkel een bericht in."
        android:id="@+id/editText"
        android:layout_below="@id/welkom_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>


</RelativeLayout>