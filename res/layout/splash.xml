<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/background_new"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/bvdh_logo"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        style="@style/textCapsCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SplashTextWelcome"
        android:id="@+id/welkom_text"
        android:layout_gravity="center"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/introText"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <TextView
        style="@style/textCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SplashTextIntro"
        android:id="@+id/introText"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center_horizontal|top"
        android:padding="10dp"
        android:background="#99000000"
        android:layout_above="@+id/SplBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/SplBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#99FFFFFF"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp" />


</RelativeLayout>